{
  "name": "jinge",
  "version": "3.3.0",
  "description": "A Proxy based MVVM framework",
  "main": "lib/index.js",
  "types": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "WATCH=true npm run build",
    "build": "rm -rf {lib,.tmp,dist} && tsc && node ./scripts/esbuild.js && rollup -c ./scripts/rollup.config.mjs",
    "rollup": "rollup -c ./scripts/rollup.config.mjs",
    "lint": "tsc --noEmit && eslint './{src,scripts}/**/*.{js,mjs,ts}' --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jingeweb/jinge.git"
  },
  "license": "AGPL-3.0",
  "homepage": "https://github.com/jingeweb/jinge#readme",
  "bugs": {
    "url": "https://github.com/jingeweb/jinge/issues"
  },
  "keywords": [
    "mvvm",
    "spa"
  ],
  "author": "Yuhang Ge <abeyuhang@gmail.com>",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "chokidar": "^3.6.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "jinge-compiler": "^3.2.3"
  },
  "dependencies": {
    "jinge-compiler": "^3.2.3"
  }
}
