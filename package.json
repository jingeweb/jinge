{
  "name": "jinge",
  "version": "4.0.0-alpha.1",
  "description": "A Proxy based MVVM framework",
  "main": "./dist/jinge.prod.js",
  "module": "./dist/jinge.prod.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/jinge.prod.js"
    },
    "./dev": {
      "types": "./src/index.ts",
      "default": "./dist/jinge.dev.js"
    },
    "./source": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "WATCH=true npm run build",
    "build-dev": "NODE_ENV=development vite build --mode development -c scripts/vite.config.ts",
    "build-prod": "vite build -c scripts/vite.config.ts",
    "build": "rm -rf dist && pnpm build-dev && pnpm build-prod",
    "lint": "tsc --noEmit && eslint './{src,scripts}/**/*.{js,mjs,ts}' --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jingeweb/jinge.git"
  },
  "license": "AGPL-3.0",
  "homepage": "https://github.com/jingeweb/jinge#readme",
  "bugs": {
    "url": "https://github.com/jingeweb/jinge/issues"
  },
  "keywords": [
    "mvvm",
    "spa"
  ],
  "author": "Yuhang Ge <abeyuhang@gmail.com>",
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3",
    "vite": "^5.3.4"
  }
}
